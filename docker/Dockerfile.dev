# docker/Dockerfile.dev
FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    python3 python3-pip git && \
    rm -rf /var/lib/apt/lists/*

# only ONNX related tools for smoke_onnx.py
RUN pip3 install --no-cache-dir numpy onnx onnxruntime

# if test  TorchScript（.pt），install torch related libs：
# x86_64 best；if can't find wheel for arm64 skip it or use other
# RUN pip3 install --no-cache-dir torch --index-url https://download.pytorch.org/whl/cpu

WORKDIR /root/ros2_ws
